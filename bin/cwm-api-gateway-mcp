#!/bin/bash

# Resolve the actual script location (following symlinks)
SCRIPT_PATH="$(readlink -f "${BASH_SOURCE[0]}")"
SCRIPT_DIR="$(dirname "$SCRIPT_PATH")"
# Go to the parent directory (the package root)
PACKAGE_DIR="$(dirname "$SCRIPT_DIR")"

# Change to the package directory and run the Python script
cd "$PACKAGE_DIR" && .venv/bin/python api_gateway_server.py "$@"